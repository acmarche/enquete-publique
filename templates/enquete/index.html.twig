{% extends '@AcMarcheEnquetePublique/layout.html.twig' %}

{% block body %}
    <div class="page-header">
        <h3>Liste des enquêtes publiques</h3>
    </div>

    <table class='table table-bordered table-hover'>
        <thead>
        <tr>
            <th>Objet</th>
            <th>Demandeur</th>
            <th>Localité</th>
        </tr>
        </thead>
        <tbody>
        {% for enquete in enquetes %}
            <tr>
                <td>
                    <a href="{{ path('enquete_show', { 'id': enquete.id }) }}">
                        {{ enquete.categorie }}
                    </a>
                </td>
                <td>
                    <a href="{{ path('enquete_show', { 'id': enquete.id }) }}">
                        {{ enquete.demandeur }}
                    </a>
                </td>
                <td> {{ enquete.localite }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
