{% extends '@AcMarcheEnquetePublique/layout.html.twig' %}

{% block body -%}

    <div class="card bg-light mb-3">
        <div class="card-header">
            <h3>Nouvelle catégorie</h3>
        </div>
        <div class="card-body">

            {{ form_start(form) }}
            {{ form_errors(form) }}
            {{ form_widget(form) }}

            <button class="btn btn-primary mr-1 mb-2" type="submit"><i class="ti ti-device-floppy" aria-hidden="true"></i>
                Sauvegarder
            </button>

            {{ form_end(form) }}
        </div>
        <div class="card-footer">
            <a href="{{ path('enquete_categorie_wp_index') }}">
                <i class="ti ti-arrow-left"></i> Annuler et retour à la liste
            </a>
        </div>
    </div>

{% endblock %}
